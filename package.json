{
  "name": "copilot-shim",
  "version": "1.0.0",
  "description": "OpenAI-compatible API server that proxies to Microsoft 365 Copilot",
  "main": "dist/index.js",
  "bin": {
    "cp-api": "./dist/cli.js"
  },
  "files": [
    "dist",
    "ecosystem.config.js"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "postinstall": "npx playwright install chromium",
    "service:start": "./scripts/service.sh start",
    "service:stop": "./scripts/service.sh stop",
    "service:restart": "./scripts/service.sh restart",
    "service:status": "./scripts/service.sh status",
    "service:logs": "./scripts/service.sh logs",
    "service:install": "./scripts/service.sh install"
  },
  "keywords": ["openai", "copilot", "m365", "api", "proxy", "cli"],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "playwright": "^1.40.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.0"
  }
}
